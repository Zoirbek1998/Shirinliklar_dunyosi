<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progressbar"
        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8dp"
            android:background="@drawable/search_backgraunt"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:drawablePadding="@dimen/size_10dp"
            android:elevation="@dimen/size_4dp"
            android:hint="Search your item here..."
            android:padding="@dimen/size_15dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:id="@+id/search_rec"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:layout_weight="1"
                android:text="Populyar Products"
                android:textSize="@dimen/text_18sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/view_all_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold"
                android:fontFamily="@font/baloo"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/size_7dp"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pop_rec"
            android:layout_margin="@dimen/size_5dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:layout_weight="1"
                android:text="Explore Products"
                android:textSize="@dimen/text_18sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/view_all_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold"
                android:fontFamily="@font/baloo"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/size_7dp"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/explore_rec"
            android:layout_margin="@dimen/size_5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:layout_weight="1"
                android:text="Recommended"
                android:textSize="@dimen/text_18sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/view_all_recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold"
                android:fontFamily="@font/baloo"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/size_7dp"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recommended_rec"
            android:layout_margin="@dimen/size_5dp"
            />


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>