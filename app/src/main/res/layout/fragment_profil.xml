<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfilFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_width="@dimen/size_200dp"
        android:layout_height="@dimen/size_200dp"
        android:src="@drawable/profile"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/profil_name"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20dp"
        android:background="@drawable/edt_backgraunt"
        android:elevation="@dimen/size_4dp"
        android:hint="Your Name"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="@dimen/size_12dp"
        android:padding="@dimen/size_12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/profil_email"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_backgraunt"
        android:elevation="@dimen/size_4dp"
        android:hint="Your Email"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="@dimen/size_12dp"
        android:padding="@dimen/size_12dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/size_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profil_name"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/profil_phone"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_backgraunt"
        android:elevation="@dimen/size_4dp"
        android:hint="Phone Number"
        android:padding="@dimen/size_12dp"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="@dimen/size_16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="@dimen/size_12dp"
        app:layout_constraintTop_toBottomOf="@+id/profil_email"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/profil_address"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_backgraunt"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="@dimen/size_12dp"
        android:elevation="@dimen/size_4dp"
        android:hint="Your Address"
        android:padding="@dimen/size_12dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/size_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profil_phone"
        app:layout_constraintWidth_percent=".8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_updata"
        android:layout_width="@dimen/size_150dp"
        android:layout_height="@dimen/size_60dp"
        app:cornerRadius="@dimen/size_10dp"
        android:elevation="@dimen/size_4dp"
        android:text="Updata"
        android:textAllCaps="false"
        android:textSize="@dimen/text_18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profil_address"
        app:layout_constraintVertical_bias="0.4"
        />

</androidx.constraintlayout.widget.ConstraintLayout>