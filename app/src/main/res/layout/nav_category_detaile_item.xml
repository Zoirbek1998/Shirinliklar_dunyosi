<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10dp"
    android:elevation="@dimen/size_4dp"
    app:cardCornerRadius="@dimen/size_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/homeBacgraunt"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_detail_img"
            android:layout_width="@dimen/size_130dp"
            android:layout_height="@dimen/size_130dp"
            android:background="@drawable/cat_border"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/nav_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="product price"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/size_5dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/add_item"
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_30dp"
                    android:src="@drawable/ic_plus"

                    />

                <TextView
                    android:id="@+id/qeantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:text="1"
                    android:textSize="@dimen/text_20sp" />

                <ImageView
                    android:id="@+id/remove_item"
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_30dp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:src="@drawable/ic_minus" />


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/baynow"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40dp"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/size_10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Buy Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="@dimen/size_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/relativeLayout" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>


